<h1 class="page-header text-center"><%= @category.name %></h1>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h4>Change Category:</h4>

    <form action='/categories/<%= @category.id %>' method='post'>
      <input type='hidden' name='_method' value='patch'>
      <div class="form-group">
        <input name='name' type='name' class="form-control" value='<%= @category.name%>'>
      </div>
      <button type='submit' class="btn btn-success stretch">Update</button>
    </form>

    <form action='/categories/<%= @category.id %>' method='post'>
      <input type='hidden' name='_method' value='delete'>
      <button type='submit' class="btn btn-danger stretch stacked">Delete</button>
    </form>
  </div>
</div>
