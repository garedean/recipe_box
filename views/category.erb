<h1 class="page-header text-center"><%= @category.name %> Recipes</h1>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2 push-down">
    <form action="/categories/<%= @category.id %>/recipes" method="post">
      <div class="form-group">
        <input name="name" class="form-control capitalize" placeholder="Add a new recipe" autofocus>
      </div>
      <button type="submit" class="btn btn-primary">Add</button>
    </form>

    <div class="push-down">

      <table class="table">
        <thead>
          <tr>
            <th class="primary">Recipe</th>
            <th class="secondary">Rating</th>
            <th class="ternary">Edit</th>
          </tr>
        </thead>

        <% @recipes.each() do |recipe| %>
          <tr>
            <td class="primary">
              <a href="/categories/<%= @category.id() %>/recipes/<%= recipe.id() %>"><%= recipe.name() %></a>
            </td>
            <td class="secondary">
              <% if recipe.rating != nil %>
                <% recipe.rating.times do |i| %>
                  <span class="glyphicon glyphicon-star"></span>
                <% end %>
              <% else %>
                  <span>Not Rated</span>
              <% end %>
            </td>
            <td class="ternary">
              <a href="/categories/<%= @category.id() %>/recipes/<%= recipe.id() %>/edit" class="edit-link">Edit</a>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
